        <font>
            <Font name="System Bold" size="41.0" />
        </font>
    </Label>
    <TextField fx:id="nameTextField" layoutX="77.0" layoutY="157.0" prefHeight="26.0" prefWidth="179.0" promptText="First Last" />
    <Label layoutX="57.0" layoutY="124.0" prefHeight="17.0" prefWidth="156.0" text="Name (First and Last Name)" />
    <Label layoutX="62.0" layoutY="192.0" text="Email" />
    <Label layoutX="65.0" layoutY="257.0" text="Password" />
    <TextField fx:id="emailTextField" layoutX="77.0" layoutY="218.0" prefHeight="26.0" prefWidth="179.0" promptText="firstlast@example.com" />
    <TextField fx:id="passwordTextField" layoutX="77.0" layoutY="280.0" prefHeight="26.0" prefWidth="179.0" promptText="************" />
    <Button fx:id="confirmSignup" layoutX="77.0" layoutY="360.0" mnemonicParsing="false" onAction="#confirmSignupClick" prefHeight="26.0" prefWidth="65.0" text="Signup" />
    <Button layoutX="199.0" layoutY="360.0" mnemonicParsing="false" onAction="#cancelSignup" text="Cancel" />
   <Label fx:id="signupError" layoutX="82.0" layoutY="327.0" prefHeight="17.0" prefWidth="0.0" />
